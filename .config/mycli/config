# vi: ft=dosini
[main]

# Turn on context-sensitive auto-completion.
smart_completion = True

# Default multi-line mode to off.
multi_line = False

# Make me opt-in to running destructive queries.
destructive_warning = True

# log file location.
log_file = ~/.cache/mycli/log

# Disable logging.
log_level = NONE

# Audit log location.
# audit_log = ~/.local/share/mycli/audit_log

# Time queries.
timing = True

# Use terminaltables' ascii format.
table_format = ascii

# The default syntax coloring is fine.
syntax_style = default

# Use the same keyboard shortcuts as Bash.
key_bindings = emacs

# Show me less suggestions.
wider_completion_menu = False

# Minimal, yet helpful prompt.
prompt = '\h:\d> '
login_path_as_host = True
prompt_continuation = '.. '

# Don't tell me about the software or contributors.
less_chatty = True

# Don't auto-detect which output style to use. Make me choose.
auto_vertical_output = False


[colors]
Token.Menu.Completions.Completion.Current = "bg:#00aaaa #000000"
Token.Menu.Completions.Completion = "bg:#008888 #ffffff"
Token.Menu.Completions.MultiColumnMeta = "bg:#aaffff #000000"
Token.Menu.Completions.ProgressButton = "bg:#003333"
Token.Menu.Completions.ProgressBar = "bg:#00aaaa"

Token.SelectedText = "#ffffff bg:#6666aa"

# Search matches (reverse-i-search).
Token.SearchMatch = "#ffffff bg:#4444aa"
Token.SearchMatch.Current = "#ffffff bg:#44aa44"

# Results output
Token.Output.Header = 'bold'
Token.Output.OddRow = '#ansiteal'
Token.Output.EvenRow = '#ansidarkblue'

# The bottom toolbar.
Token.Toolbar = "bg:#222222 #aaaaaa"
Token.Toolbar.Off = "bg:#222222 #888888"
Token.Toolbar.On = "bg:#222222 #ffffff"

# Search/arg/system toolbars.
Token.Toolbar.Search = noinherit bold
Token.Toolbar.Search.Text = nobold
Token.Toolbar.System = noinherit bold
Token.Toolbar.Arg = noinherit bold
Token.Toolbar.Arg.Text = nobold
